{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=your_database_name;Username=your_username;Password=your_password_here;SSL Mode=Prefer"
  },
  "Database": {
    "Host": "localhost",
    "Port": 5432,
    "Database": "your_database_name",
    "User": "your_username",
    "Password": "your_password_here"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:8080"
      }
    }
  },
  "Harvest": {
    "ClientId": "your_harvest_client_id",
    "ClientSecret": "your_harvest_client_secret",
    "RedirectUri": "http://localhost:5173/time-lottery",
    "AccessToken": "",
    "RefreshToken": "",
    "AccountId": ""
  },
  "Glede": {
    "ApiKey": "your_glede_api_key_here",
    "BaseUrl": "https://api.glede.app",
    "SenderName": "Fortel",
    "WeeklyWinnerAmount": 500,
    "MonthlyWinnerAmounts": {
      "First": 2000,
      "Second": 1500,
      "Third": 1000
    }
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "ClientId": "your_azure_client_id",
    "TenantId": "your_azure_tenant_id",
    "ClientSecret": "your_azure_client_secret_for_web_app_oidc",
    "Audience": "api://your_azure_client_id/access_as_user"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "POST:/api/harvest-oauth/exchange",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "GET:/api/harvest-oauth/status",
        "Period": "1m",
        "Limit": 30
      },
      {
        "Endpoint": "GET:/api/harvest-oauth/user",
        "Period": "1m",
        "Limit": 20
      },
      {
        "Endpoint": "GET:/api/harvest-oauth/time-entries",
        "Period": "1m",
        "Limit": 20
      },
      {
        "Endpoint": "DELETE:/api/harvest-oauth/revoke",
        "Period": "1m",
        "Limit": 10
      }
    ]
  }
}
